# Config file
# All times are in seconds

# Amount of time between onsets of two normal key presses to be considered a chord
# Onset of second key must precede offset of first key
chordTime = 0.1

# This setting enables a normal modifier key to be pressed and released to be activated, rather than continuously held
# Necessary if all three key chord combinations don't work with the hardware
stickyMod = True

# Similar setting for the special mod keys. The way I have it currently implemented the special mod keys are only used with one key at a time, so this isn't needed
stickySpecial = False

# How long a sticky key is held for
modStickTime = 0.75